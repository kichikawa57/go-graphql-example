# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar TodoId
scalar UserId
scalar Date
scalar Upload
scalar UUID

enum Signal {
  RED
  YELLOW
  GREEN
}


type Todo {
  id: TodoId!
  text: Upload!
  done: Boolean!
  dones: Boolean!
  user: User!
  createdAt: Date
}

type User {
  id: UserId!
  name: String!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: UserId!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
